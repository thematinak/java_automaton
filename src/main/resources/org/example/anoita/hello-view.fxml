<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.canvas.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.anoita.Controller">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
  </padding>
   <children>
      <BorderPane>
         <right>
            <VBox prefHeight="200.0" prefWidth="62.0" BorderPane.alignment="CENTER">
               <children>
                  <Button mnemonicParsing="false" onAction="#onGunPowderClick" prefHeight="25.0" prefWidth="94.0" text="Gun Powder" />
                  <Button mnemonicParsing="false" onAction="#onFireClick" prefHeight="25.0" prefWidth="102.0" text="Fire" />
                  <Button mnemonicParsing="false" onAction="#onOilClick" prefHeight="25.0" prefWidth="74.0" text="Oil" />
                  <Button mnemonicParsing="false" onAction="#onRockClick" prefHeight="25.0" prefWidth="116.0" text="Rock" />
                  <Button mnemonicParsing="false" onAction="#onSandClick" prefHeight="25.0" prefWidth="104.0" text="Send" />
                  <Button mnemonicParsing="false" onAction="#onSnowClick" prefHeight="25.0" prefWidth="75.0" text="Snow" />
                  <Button mnemonicParsing="false" onAction="#onWaterClick" prefHeight="25.0" prefWidth="192.0" text="Water" />
                  <Button mnemonicParsing="false" onAction="#onWoodClick" prefHeight="25.0" prefWidth="72.0" text="Wood" />
               </children>
            </VBox>
         </right>
         <center>
            <Canvas fx:id="canvas" height="600" onMouseClicked="#onMouseClicked" onMouseDragged="#onMouseClicked" width="400" BorderPane.alignment="CENTER" />
         </center>
         <bottom>
            <HBox BorderPane.alignment="CENTER">
               <children>
                  <Button mnemonicParsing="false" text="Remove" />
               </children>
            </HBox>
         </bottom>
      </BorderPane>
   </children>
</VBox>
